{
  "name": "gmail",
  "description": "Email access and management through Gmail API",
  "provider": "Google",
  "authentication": {
    "type": "OAuth2",
    "credentials_path": "~/.claude/config.json",
    "oauth_flow": {
      "client_id": "{GOOGLE_CLIENT_ID}",
      "client_secret": "{GOOGLE_CLIENT_SECRET}",
      "redirect_uri": "http://localhost:3000/oauth2callback"
    },
    "scopes": [
      "https://mail.google.com/",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.readonly"
    ],
    "token_storage": "~/.claude/secrets/gmail_token.json",
    "refresh_interval": "3600000"
  },
  "capabilities": [
    "list_emails",
    "read_email",
    "draft_email",
    "send_email",
    "organize_folders",
    "search_email",
    "get_labels",
    "create_label",
    "move_email"
  ],
  "rate_limits": {
    "requests_per_minute": 60,
    "emails_per_day": 2000,
    "attachments_per_request": 10
  },
  "error_handling": {
    "authentication_errors": "Retry with refreshed token",
    "quota_exceeded": "Queue and retry after rate limit",
    "network_errors": "Retry with exponential backoff",
    "invalid_request": "Validate input and retry"
  },
  "used_by": [
    "Email Manager skill",
    "Content Creator Agent"
  ]
}