{
  "project": "Daily Life Productivity Digital FTE",
  "version": "1.0",
  "created": "2026-02-12",
  "description": "Central configuration for all MCP servers in the Daily Life Productivity Digital FTE project",
  "author": "Claude Code",
  
  "authentication_requirements": {
    "oauth_providers": [
      "Google OAuth 2.0 (Gmail, Google Drive, Google Calendar)",
      "Slack Bot Token",
      "Notion API Key",
      "Brave Search API Key",
      "Weather API Key (OpenWeatherMap)",
      "News API Key (NewsAPI)"
    ],
    "required_secrets": {
      "gmail_credentials": "User's Google account credentials with Gmail access",
      "drive_credentials": "User's Google account credentials with Drive access",
      "calendar_credentials": "User's Google account credentials with Calendar access",
      "notion_token": "User's Notion workspace token",
      "slack_bot_token": "User's Slack bot token with chat:write permissions",
      "brave_search_key": "User's Brave Search API key",
      "weather_api_key": "User's OpenWeatherMap API key",
      "news_api_key": "User's NewsAPI API key"
    },
    "setup_instructions": {
      "google": {
        "steps": [
          "Enable Gmail API in Google Cloud Console",
          "Enable Google Drive API in Google Cloud Console",
          "Enable Google Calendar API in Google Cloud Console",
          "Create OAuth 2.0 credentials for web application",
          "Download credentials.json and store in ~/.claude/config.json",
          "Complete OAuth flow to get refresh tokens"
        ]
      },
      "slack": {
        "steps": [
          "Create a Slack App in the Slack API portal",
          "Enable Bot Token Scopes: chat:write, chat:read, users:read",
          "Install the app to your workspace",
          "Copy the Bot User OAuth Token"
        ]
      },
      "notion": {
        "steps": [
          "Generate a new integration in Notion Settings",
          "Copy the Internal Integration Token",
          "Share the integration with your workspace"
        ]
      },
      "brave_search": {
        "steps": [
          "Sign up for Brave Search API access",
          "Copy the API key from your dashboard"
        ]
      },
      "weather": {
        "steps": [
          "Sign up for OpenWeatherMap API access",
          "Choose appropriate plan (Free tier supports 1000 calls/day)",
          "Copy the API key"
        ]
      },
      "news_api": {
        "steps": [
          "Sign up for NewsAPI.org access",
          "Choose appropriate plan (Free tier supports 500 calls/day)",
          "Copy the API key"
        ]
      }
    }
  },
  "connection_settings": {
    "base_urls": {
      "gmail": "https://gmail.googleapis.com/",
      "google_drive": "https://www.googleapis.com/drive/v3/",
      "google_calendar": "https://www.googleapis.com/calendar/v3/",
      "notion": "https://api.notion.com/v1/",
      "slack": "https://slack.com/api/",
      "brave_search": "https://api.brave.com/",
      "weather": "https://api.openweathermap.org/data/2.5/",
      "news_api": "https://newsapi.org/v2/"
    },
    "timeouts": {
      "general": "30000",
      "slack": "15000",
      "google": "20000",
      "notion": "25000",
      "brave_search": "15000",
      "weather": "10000",
      "news_api": "15000"
    },
    "retry_policies": {
      "max_retries": 3,
      "initial_delay_ms": 1000,
      "max_delay_ms": 30000,
      "backoff_multiplier": 2
    }
  },
  "security_policies": {
    "data_retention": {
      "email_data": "30 days",
      "drive_data": "90 days",
      "calendar_data": "30 days",
      "notion_data": "90 days",
      "slack_data": "30 days",
      "search_data": "7 days",
      "weather_data": "7 days",
      "news_data": "7 days"
    },
    "encryption": {
      "in_transit": "TLS 1.3",
      "at_rest": "AES-256",
      "api_keys": "Base64 encoded in config files"
    },
    "audit_logging": {
      "enabled": true,
      "retention_days": 365,
      "log_events": ["authentication", "data_access", "configuration_changes"]
    }
  },
  "monitoring_and_metrics": {
    "enabled": true,
    "metrics_to_collect": [
      "request_count",
      "success_rate",
      "average_response_time",
      "error_rate",
      "quota_usage"
    ],
    "alerts": {
      "high_error_rate": "5%",
      "high_latency": "2000ms",
      "quota_threshold": "80%"
    },
    "reporting_interval": "5 minutes"
  },
  "maintenance_schedule": {
    "daily_backup": "02:00",
    "weekly_cleanup": "Sunday 03:00",
    "monthly_review": "First Monday 04:00"
  },
  "status": {
    "overall_health": "pending_setup",
    "servers": {
      "gmail": "not_configured",
      "google_drive": "not_configured",
      "google_calendar": "not_configured",
      "notion": "not_configured",
      "slack": "not_configured",
      "brave_search": "not_configured",
      "weather": "not_configured",
      "news_api": "not_configured"
    }
  }
}