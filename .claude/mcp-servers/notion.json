{
  "name": "notion",
  "description": "Knowledge base and task tracking through Notion API",
  "provider": "Notion",
  "authentication": {
    "type": "API Key",
    "credentials_path": "~/.claude/config.json",
    "api_key": "{NOTION_API_KEY}",
    "workspace_id": "{NOTION_WORKSPACE_ID}",
    "token_storage": "~/.claude/secrets/notion_token.json",
    "base_url": "https://api.notion.com/v1/",
    "version": "2024-06-01"
  },
  "capabilities": [
    "list_pages",
    "read_page",
    "create_page",
    "update_page",
    "delete_page",
    "search_pages",
    "create_database",
    "query_database",
    "update_database",
    "create_block",
    "update_block",
    "get_properties"
  ],
  "rate_limits": {
    "requests_per_minute": 30,
    "pages_per_day": 5000,
    "database_operations_per_minute": 20
  },
  "error_handling": {
    "authentication_errors": "Validate API key and permissions",
    "rate_limit_exceeded": "Implement exponential backoff",
    "page_not_found": "Check page ID and workspace",
    "permission_denied": "Request appropriate workspace access"
  },
  "used_by": [
    "Note Organizer skill",
    "Learning Curator skill",
    "Task Prioritizer skill"
  ]
}