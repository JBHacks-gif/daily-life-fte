{
  "name": "slack",
  "description": "Notifications and communication through Slack API",
  "provider": "Slack",
  "authentication": {
    "type": "Bot Token",
    "credentials_path": "~/.claude/config.json",
    "bot_token": "{SLACK_BOT_TOKEN}",
    "token_storage": "~/.claude/secrets/slack_token.json",
    "verification_token": "{SLACK_VERIFICATION_TOKEN}",
    "signing_secret": "{SLACK_SIGNING_SECRET}"
  },
  "capabilities": [
    "send_message",
    "send_thread_message",
    "get_conversations",
    "get_users",
    "create_channel",
    "invite_user",
    "get_user_info",
    "send_file",
    "send_blocks",
    "send_ephemeral_message"
  ],
  "rate_limits": {
    "messages_per_minute": 60,
    "files_per_day": 100,
    "api_calls_per_minute": 120
  },
  "error_handling": {
    "authentication_errors": "Validate bot token and permissions",
    "rate_limit_exceeded": "Implement Slack-recommended backoff",
    "channel_not_found": "Check channel ID and permissions",
    "user_not_found": "Validate user ID and workspace"
  },
  "used_by": [
    "All agents for alerts, summaries, confirmations"
  ]
}