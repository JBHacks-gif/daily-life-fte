{
  "name": "weather",
  "description": "Daily weather and forecast data through Weather API",
  "provider": "OpenWeatherMap",
  "authentication": {
    "type": "API Key",
    "credentials_path": "~/.claude/config.json",
    "api_key": "{WEATHER_API_KEY}",
    "token_storage": "~/.claude/secrets/weather_token.json",
    "base_url": "https://api.openweathermap.org/data/2.5/",
    "default_location": {
      "lat": "24.7136",
      "lon": "46.6753",
      "city": "Riyadh",
      "country": "SA"
    }
  },
  "capabilities": [
    "get_current_weather",
    "get_forecast",
    "get_hourly_forecast",
    "get_daily_forecast",
    "get_weather_alerts",
    "get_air_quality",
    "get_uv_index",
    "get_wind_data",
    "get_precipitation"
  ],
  "rate_limits": {
    "requests_per_minute": 60,
    "calls_per_day": 1000,
    "forecast_requests_per_minute": 30
  },
  "error_handling": {
    "authentication_errors": "Validate API key",
    "rate_limit_exceeded": "Implement exponential backoff",
    "invalid_location": "Validate coordinates or city name",
    "network_errors": "Retry with exponential backoff"
  },
  "used_by": [
    "Morning Routine workflow",
    "Travel Planner skill"
  ]
}